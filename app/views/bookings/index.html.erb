<div class="container">
<%= link_to "My Orders", bookings_path%>
<%= link_to "My Listings",  all_bookings_path %>
  <h1>MY ORDERS </h1>

  <% @bookings.each do |booking| %>
  <%= cl_image_tag booking.garment.photos[0].key, height: 300, width: 400%>
  <%= booking.status.capitalize %><br>
  <%= booking.garment.name%><br>
  <%= booking.start_date.strftime("%e %m %Y") %><br>
  <%= booking.end_date.strftime("%e %m %Y") %><br>
  <%= booking.total_price %><br>
  <%= link_to "View Details", garment_path(booking.garment)  %><br><br>

  <% end %>
</div>
