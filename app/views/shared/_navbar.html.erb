<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

    <%= link_to root_path class: "navbar-brand" do %>
      <%= image_tag "logo1.png", class: "logo" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li style="margin-right: 16px">
          <%= link_to "Add a garment", new_garment_path, class: "btn btn-secondary selectbutton"  %>
        </li>
        <% if user_signed_in? %>

          <div class="dropdown">
            <button class="btn btn-outline-dark dropdown-toggle selectbutton" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              My account
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <li><%= link_to "My Orders", bookings_path, class: "dropdown-item" %></li>
              <li><%= link_to "My Listings", all_bookings_path, class: "dropdown-item" %></li>
              <li><div class="dropdown-divider"></div></li>
              <li><%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            </div>
          </div>

          <% else %>
          <li class="nav-item">
            <%= link_to "Login", "#login", "data-toggle" => "modal", :class => 'btn btn-outline-dark selectbutton' %>
          </li>
        <% end %>
      </ul>
    </div>

</div>
