<div class="container">
  <ul class="nav filter-bar">
  <li class="nav-item filterselect">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text" for="inputGroupSelect01">Category</label>
    <select class="custom-select" id="inputGroupSelect01">
        <% i = 1 %>
        <option selected>Choose...</option>
        <%= @garments.select("DISTINCT(CATEGORY)").each do |category| %>
          <option value = <%i%>><%= category.category %></option>
          <% i += 1%>
        <% end %>
    </select>
    </div>
  </div>
  </li>
  <li class="nav-item filterselect">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text" for="inputGroupSelect01">Category</label>
    <select class="custom-select" id="inputGroupSelect01">
      <option selected>Choose...</option>
      <option value="1">$0 - $50</option>
      <option value="2">$50 - $100</option>
      <option value="3">$100 - $200</option>
      <option value="4">$200+</option>
    </select>
    </div>
  </div>
  </li>
    <% if @garments.count > 10 %>
      <ul class="pagination filterselect">
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
      <% i = 1%>
      <% ((@garments.count)/10.to_f).ceil.times do %>
      <li class="page-item"><a class="page-link" href="#"><%=i%></a></li>
      <% i = i + 1%>
      <% end %>
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
      </ul>
    <% end %>

</ul>

</div>

<div class="container index">
  <% @garments.each do |garment| %>
    <div class="card" style="width: 23%; margin: 1%">
    <img class="card-img-top" style="height: 25vh; width: 100%; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path garment.photos[0].key, height: 300, width: 400, crop: :fill %>')">
      <div class="card-body">
        <h5 class='card-title'> <%= link_to garment.name, garment_path(garment) %> </h5>
        <p class='card-text'> <%= garment.description %> </p>
        <p> <%= "#{garment.category} - Size: #{garment.size} - Color: #{garment.colour}" %> </p>
        <p> <%= "$#{garment.price}" %> </p>
      </div>
    </div>  
  <% end %>

</div>

